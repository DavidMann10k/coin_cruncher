<h3>Account Settings</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    <% if @minimum_password_length %>
      <small class='form-text text-muted'><%= @minimum_password_length %> characters minimum</small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= button_to "Destroy my account", registration_path(resource_name),
  data: { 
    confirm: "Your account will be transported to an alternate dimension and subjected to nucleonic inversion. This process is irreversible." 
  },
  method: :delete,
  class: 'btn btn-danger' %>

<%= link_to "Back", :back, class: 'btn btn-link' %>
