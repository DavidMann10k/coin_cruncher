<div class='header row align-items-center'>
  <div class='col'>
    <h2>Crypto Cruncher</h2>
  </div>
  <div class='col text-right'>
    <% if current_user %>
      <%= link_to 'Sign Out', destroy_user_session_path, class: ['btn', 'btn-primary', 'btn-sm'], method: :delete %>
      <%= link_to 'Account Settings', edit_user_registration_path, class: ['btn', 'btn-link', 'btn-sm'] %> 
    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: ['btn', 'btn-primary', 'btn-sm'] %>
      <%= link_to 'Sign Up', new_user_registration_path, class: ['btn', 'btn-link', 'btn-sm'] %>
    <% end %>
  </div>
</div>
