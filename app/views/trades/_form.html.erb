<%= form_for @trade, url: { controller: 'trades', action: 'create' } do |f| %>
  <%= f.fields_for :credit do |cr| %>
    <div class='form-row'>
      <div class='col'>
        <h5>Buying</h5>
      </div>
    </div>
    <div class='form-row'>
      <div class='form-group col-md-6'>
        <%= cr.label :name, 'Coin/Currency' %>
        <%= cr.text_field :name, class: 'form-control' %>
      </div>
      <div class='form-group col-md-6'>
        <%= cr.label :quantity %>
        <%= cr.text_field :quantity, class: 'form-control' %>
      </div>
    </div>
  <% end %>
  <%= f.fields_for :debit do |dr| %>
    <div class='form-row'>
      <div class='col'>
        <h5>Total Price</h5>
      </div>
    </div>
    <div class='form-row'>
      <div class='form-group col-md-6'>
        <%= dr.label :name, 'Coin/Currency' %>
        <%= dr.text_field :name, class: 'form-control' %>
      </div>
      <div class='form-group col-md-6'>
        <%= dr.label :quantity %>
        <%= dr.text_field :quantity, class: 'form-control' %>
      </div>
    </div>
  <% end %>
  <%= f.submit 'Create', class: 'btn btn-primary d-inline' %>
  <%= link_to "Cancel", transactions_path, class: 'btn btn-link d-inline' %>
<% end %>
